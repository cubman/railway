<rules>
    <rule name="Проверка функционирования стрелки" type="ST" area="SplitPoint.A">
        <group>
            <element code="СТ7"/>
            <element code="СТ9"/>
        </group>
        <preCondition>
            <simple state="1"/>
        </preCondition>
        <postCondition>
            <if>
                <condition>
                    <simple code="СТ7"/>
                </condition>
                <then>
                    <print out="console" text="1. Стрелка СТ7 переведена"/>
                </then>
                <else>
                    <print out="console" text="Какая-то другая стрелка"/>
                </else>
            </if>
        </postCondition>
    </rule>
    <rule name="Проверка функционирования стрелки 2 вариант" type="ST" area="SplitPoint.A">
        <group>
            <element code="СТ7"/>
            <element code="СТ9"/>
        </group>
        <preCondition>
            <simple code="СТ7"/>
        </preCondition>
        <postCondition>
            <print out="console" text="2. Стрелка СТ7 переведена. Другой подход"/>
        </postCondition>
    </rule>
    <rule name="Проверка функционирования стрелки 3 вариант" type="ST" area="SplitPoint.A">
        <group>
            <element code="СТ7"/>
            <element code="СТ9"/>
        </group>
        <preCondition>
            <simple state="1"/>
        </preCondition>
        <postCondition>
            <if>
                <condition>
                    <and>
                        <condition>
                            <simple state="1"/>
                        </condition>
                        <condition>
                            <simple code="СТ7"/>
                        </condition>
                    </and>
                </condition>
                <then>
                    <print out="console" text="3. Стрелка СТ7 переведена и находится в состоянии 1"/>
                </then>
            </if>
        </postCondition>
    </rule>
    <rule name="Проверка функционирования стрелки 4 вариант" type="ST" area="SplitPoint.A">
        <group>
            <element code="СТ7"/>
            <element code="СТ9"/>
        </group>
        <preCondition>
            <and>
                <condition>
                    <simple state="1"/>
                </condition>
            </and>
        </preCondition>
        <postCondition>
            <or>
                <condition>
                    <if>
                        <condition>
                            <and>
                                <condition>
                                    <simple state="1"/>
                                </condition>
                                <condition>
                                    <simple code="СТ7"/>
                                </condition>
                            </and>
                        </condition>
                        <then>
                            <and>
                                <condition>
                                    <print out="console" text="4.1 Стрелка СТ7 переведена и находится в состоянии 1."/>
                                </condition>
                                <condition>
                                    <print out="console" level="error" text="4.1 Стрелка СТ7 переведена и находится в состоянии 1."/>
                                </condition>
                                <condition>
                                    <timer sleep="2"/>
                                </condition>
                                <condition>
                                    <print out="user" level="error" text="4.2 Стрелка СТ7 переведена и находится в состоянии 1."/>
                                </condition>
                                <condition>
                                    <print out="user" level="info" text="4.2 Стрелка СТ7 переведена и находится в состоянии 1."/>
                                </condition>
                            </and>
                        </then>
                    </if>
                </condition>
                <condition>
                    <print out="console" text="Условие по OR"/>
                </condition>
            </or>
        </postCondition>
    </rule>
</rules>